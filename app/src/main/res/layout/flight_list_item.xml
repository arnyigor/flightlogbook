<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?attr/selectableItemBackground"
	app:cardUseCompatPadding="true">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:paddingBottom="8dp">

		<TextView
			android:id="@+id/tv_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_margin="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:padding="2dp"
			android:textSize="@dimen/font_size"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_chainStyle="packed"
			tools:text="22.05.2012" />

		<ImageView
			android:id="@+id/iv_total_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="@+id/tv_log_time_flight_total"
			app:layout_constraintEnd_toStartOf="@+id/tv_log_time_flight_total"
			app:layout_constraintTop_toTopOf="@+id/tv_log_time_flight_total"
			app:srcCompat="@drawable/ic_totals" />

		<TextView
			android:id="@+id/tv_log_time_flight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_toEndOf="@+id/tv_date"
			android:layout_toRightOf="@+id/tv_date"
			android:gravity="center_horizontal"
			android:padding="2dp"
			android:textColor="@color/md_grey_600"
			android:textSize="@dimen/font_size_xmedium"
			app:layout_constraintBottom_toTopOf="@+id/tv_log_time_flight_total"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="@string/str_logtime" />

		<ImageView
			android:id="@+id/iv_flight_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="@+id/tv_log_time_flight"
			app:layout_constraintEnd_toStartOf="@+id/tv_log_time_flight"
			app:layout_constraintTop_toTopOf="@+id/tv_log_time_flight"
			app:srcCompat="@drawable/ic_plane" />

		<TextView
			android:id="@+id/tv_log_time_flight_total"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_toEndOf="@+id/tv_date"
			android:layout_toRightOf="@+id/tv_date"
			android:gravity="center_horizontal"
			android:padding="2dp"
			android:textColor="@color/md_grey_600"
			android:textSize="@dimen/font_size_xmedium"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_log_time_flight"
			tools:text="@string/str_logtime" />

		<TextView
			android:id="@+id/tv_plane_type"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:textSize="@dimen/font_size"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_date"
			tools:text="Airbus A321" />

		<TextView
			android:id="@+id/tv_plane_reg_no"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:textSize="@dimen/font_size_small"
			app:layout_constraintBottom_toBottomOf="@+id/tv_plane_type"
			app:layout_constraintStart_toEndOf="@+id/tv_plane_type"
			app:layout_constraintTop_toTopOf="@+id/tv_plane_type"
			tools:text="Airbus A321" />

		<TextView
			android:id="@+id/tv_flight_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:textSize="@dimen/font_size"
			app:layout_constraintBottom_toBottomOf="@+id/tv_date"
			app:layout_constraintStart_toEndOf="@+id/tv_date"
			app:layout_constraintTop_toTopOf="@+id/tv_date"
			tools:text="Тип полета" />

	</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>