<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/edtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:hint="@string/str_date"
                    android:inputType="date"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_size"
                    android:text="@string/str_itemlogtime"
                    android:layout_height="wrap_content"
            />
            <EditText
                    android:id="@+id/edtTime"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:hint="@string/str_logtime"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/motoContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:hint="@string/str_regnum"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtRegNo"
                    android:layout_weight="1.2"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tvAirplaneType"
                    android:layout_width="match_parent"
                    android:hint="@string/str_type"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:text="@string/str_add"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAddAirplaneTypes"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinDayNight"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"
                    android:entries="@array/daynight"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinVfrIfr"
                    android:layout_weight="1"
                    android:entries="@array/ifrvfr"
                    android:spinnerMode="dropdown"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinFlightType"
                    android:layout_weight="1"
                    android:entries="@array/flighttype"
                    android:spinnerMode="dropdown"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/edtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_desc"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:id="@+id/btnAddEdtItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_add"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>