<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/edtDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:cursorVisible="false"
                            android:focusable="true"
                            android:hint="@string/str_date"
                            android:inputType="date"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/font_size"
                            android:text="@string/str_itemlogtime"
                            android:layout_height="wrap_content"
                    />
                    <EditText
                            android:id="@+id/edtTime"
                            android:inputType="number"
                            android:layout_width="0dp"
                            android:hint="@string/str_logtime"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="center"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/motoContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/edtRegNoLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/edtRegNo"
                                android:layout_height="wrap_content"
                                android:hint="@string/str_regnum"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvAirplaneType"
                            android:layout_width="0dp"
                            android:hint="@string/str_type"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    <ImageButton
                            android:src="@drawable/ic_icon_new"
                            android:layout_width="wrap_content"
                            android:text="@string/str_add"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnAddAirplaneTypes" android:contentDescription="@string/str_add_airplane_types"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinDayNight"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:entries="@array/daynight"/>
                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinVfrIfr"
                            android:layout_weight="1"
                            android:entries="@array/ifrvfr"
                            android:spinnerMode="dropdown"/>
                    <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinFlightType"
                            android:layout_weight="1"
                            android:entries="@array/flighttype"
                            android:spinnerMode="dropdown"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/edtDescLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:id="@+id/edtDesc"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:hint="@string/str_desc"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <Button
                            android:id="@+id/btnAddEdtItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_add"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
